{% extends 'base.html.twig' %}

 {% block title %} Admin-ParisGO {% endblock %}

 {% block body %}
     <div class="content-container text-center">
        <div class="container-fluid" style="padding-right:60px;padding-left:60px">
     <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
             {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group col-md-6 text-left">
                        {{ form_row(form.borough, {'attr': {'class': 'form-control', 'placeholder': 'Arrondissement'}}) }}
                    </div>
                    <div class="form-group col-md-6 text-left">
                        {{ form_row(form.district, {'attr': {'class': 'form-control', 'placeholder': 'Quartier'}}) }}
                    </div>
                    <div class="form-group col-md-6 text-left">
                        {{ form_row(form.count_hotel, {'attr': {'class': 'form-control', 'placeholder': 'Nombre d\'hotels'}}) }}
                    </div>
                    <div class="form-group col-md-6 text-left">
                        {{ form_row(form.longitude, {'attr': {'class': 'form-control', 'placeholder': 'Longitude'}}) }}
                    </div>
                    <div class="form-group col-md-12 text-left">
                        {{ form_row(form.latitude, {'attr': {'class': 'form-control', 'placeholder': 'Latitude'}}) }}
                    </div>
                </div>
             {{ form_end(form) }}
            </div>
        </div>
     </div>
 {% endblock %}
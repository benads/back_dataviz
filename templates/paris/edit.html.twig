{% extends 'base.html.twig' %}

 {% block title %} Admin-ParisGO {% endblock %}

 {% block body %}
     <div class="content-container text-center">
        <div class="container-fluid" style="padding-right:60px;padding-left:60px">

         <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
             {#<div class="card-body">
                 {{ form_start(form) }}
                 {{ form_widget(form)}}
                 {{ form_end(form) }}
                 <a href="{{ path('index-paris') }}" class="btn btn-secondary">Annuler</a>
             </div>#}
             <form name="paris" method="post">
                 <div id="paris">
                     <div>
                         <label for="paris_borough" class="required">Borough</label>
                         <input type="text" id="paris_borough" name="borough" required="required" value="{{ paris.borough }}" />
                     </div>
                     <div>
                         <label for="paris_district" class="required">District</label>
                         <input type="text" id="paris_district" name=district required="required" value="{{ paris.district }}" />
                     </div>
                     <div>
                         <label for="paris_count_hotel" class="required">Count hotel</label>
                         <input type="text" id="paris_count_hotel" name="count_hotel" required="required" value="{{ paris.nb_hotels }}" />
                     </div>
                     <div>
                         <label for="paris_longitude" class="required">Longitude</label>
                         <input type="text" id="paris_longitude" name="longitude" required="required" value="{{ paris.googleMaps.longitude }}" />
                     </div>
                     <div>
                         <label for="paris_latitude" class="required">Latitude</label>
                         <input type="text" id="paris_latitude" name="latitude" required="required" value="{{ paris.googleMaps.latitude }}" />
                     </div>
                     <div>
                         <button type="submit" id="paris_Sauvegarder" name="save" class="btn btn-success col-md-4">Sauvegarder</button>
                     </div>
                     <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('create-item') }}"
                     >
                 </div>
             </form>
         </div>
     </div>
     </div>

 {% endblock %}